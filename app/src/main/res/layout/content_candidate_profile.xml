<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.CandidateProfileActivity"
    tools:showIn="@layout/app_bar_candidate_profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/update_imageview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_placeholder"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="36dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="24dp"
                            android:text="Candidate Profile"
                            android:textColor="#476cb1"
                            android:textSize="24sp" />

                        <Switch
                            android:id="@+id/toggle_editCandidate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:layout_marginTop="12dp"
                            android:textColor="#7f76ec"/>

                        <EditText
                            android:id="@+id/edittext_update_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:background="@null"
                            android:hint="First Name"
                            android:textColor="#b247ec"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:layout_marginTop="12dp"
                            android:textColor="#7f76ec"/>

                        <EditText
                            android:id="@+id/edittext_update_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:background="@null"
                            android:hint="Last Name"
                            android:textColor="#b247ec"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginTop="12dp"
                            android:textColor="#7f76ec"/>

                        <EditText
                            android:id="@+id/edittext_update_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:background="@null"
                            android:hint="Email Id"
                            android:textColor="#b247ec"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:layout_marginTop="12dp"
                            android:textColor="#7f76ec"/>

                        <EditText
                            android:id="@+id/edittext_update_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:background="@null"
                            android:hint="Mobile Number"
                            android:textColor="#b247ec"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date Of Birth"
                            android:layout_marginTop="12dp"
                            android:textColor="#7f76ec"/>

                        <EditText
                            android:id="@+id/edittext_update_date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:background="@null"
                            android:hint="Date Of Birth"
                            android:textColor="#b247ec"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:layout_marginTop="12dp"
                            android:textColor="#7f76ec"/>

                        <RadioGroup
                            android:id="@+id/radioGroup_update_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="24dp"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioButton_update_male"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:layout_height="wrap_content"
                                android:text="@string/text_male"/>


                            <RadioButton
                                android:id="@+id/radioButton_update_female"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:layout_height="wrap_content"
                                android:text="@string/text_female"/>
                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>